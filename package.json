{
  "name": "@riculum/ts-errors",
  "version": "0.1.2",
  "description": "Type-safe HTTP error classes for TypeScript projects.",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/riculum/ts-errors.git"
  },
  "homepage": "https://github.com/riculum/ts-errors#readme",
  "bugs": {
    "url": "https://github.com/riculum/ts-errors/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test": "node -e \"console.log('add tests')\"",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "errors",
    "http",
    "api",
    "exceptions",
    "nodejs",
    "nextjs"
  ]
}
